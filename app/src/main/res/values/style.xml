<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbar_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_mark_18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="genre_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/text_color_bgr</item>
        <item name="android:paddingVertical">@dimen/mark_10dp</item>
        <item name="android:textSize">@dimen/text_mark_16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingHorizontal">@dimen/mark_16dp</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical">@dimen/mark_8dp</item>
        <item name="android:textSize">@dimen/text_mark_20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingHorizontal">@dimen/mark_16dp</item>
    </style>
</resources>