<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mark_16dp"
    android:background="@color/white"
    android:layout_marginHorizontal="@dimen/mark_4dp">


    <LinearLayout
        android:id="@+id/coverGroup"
        android:layout_width="@dimen/mark_0dp"
        android:layout_height="@dimen/mark_0dp"
        android:gravity="center"
        android:clickable="true"
        android:background="@color/grey"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/name">

        <ImageView
            android:id="@+id/imageCoverPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_placeholder"
            android:layout_gravity="center"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/imageCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/mark_0dp"
        android:layout_height="wrap_content"
        tools:text="Гренландия"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/text_mark_16sp"
        android:layout_marginTop="@dimen/mark_8dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coverGroup"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>